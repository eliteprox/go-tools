# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

# Ignored files
[{go.{mod,sum},*.{md,phash}}]
charset = unset
indent_style = unset
indent_size = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
end_of_line = unset

# Makefiles/Dockerfile/golang files
[{Makefile,*.go}]
indent_style = tab

# YAML/JSON Files
[{.ecrc,*.{yml,yaml,json}}]
indent_size = 2
